
public class Score {
	
	private int wins;
	private int losses;
	private int ties;
	
	public void increaseWins() {
		wins++;
	}
	
	public void increaseLosses() {
		losses++;
	}
	
	public void increaseTies() {
		ties++;
	}
	
	public String toString() {
		String output = "Wins ::" + wins;
		output = output + " -- Ties :: " + ties;
		output = output + " -- Losses :: " + losses;
		
	}

}
